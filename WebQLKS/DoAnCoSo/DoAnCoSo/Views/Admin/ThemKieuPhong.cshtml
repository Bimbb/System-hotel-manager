@model DoAnCoSo.Models.KieuPhong

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2 style="text-align:center">Thêm kiểu phòng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p style="font-style: normal; font-size: 20px; color: darkturquoise">Kiệu phòng</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKieuPhong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKieuPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />| hoặc |
                @Html.ActionLink("Quay lại", "KieuPhong")
            </div>
        </div>
    </div>
}

