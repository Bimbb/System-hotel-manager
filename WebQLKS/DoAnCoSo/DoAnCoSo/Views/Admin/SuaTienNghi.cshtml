@model DoAnCoSo.Models.TienNghi
@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
<h2 style="text-align:center">Sửa tiện nghi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTN)

        <div class="form-group">
            <p style="font-style: normal; font-size: 20px; color: darkturquoise">Tiện nghi</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p style="font-style: normal; font-size: 20px; color: darkturquoise">Ảnh</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnhDaiDien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AnhDaiDien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" /> | hoặc |
                @Html.ActionLink("Quay lại", "Phong")
            </div>
        </div>
    </div>
}

